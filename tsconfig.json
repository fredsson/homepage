{
  "compilerOptions": {
    // project options
    "target": "ES6",
    "lib": [
      "ESNext",
      "dom"
    ],
    "outDir": "dist/tsc",
    "removeComments": true,

    // Module resolution
    "baseUrl": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {},
    "isolatedModules": true,

    // Source Map
    "sourceMap": true,
    "sourceRoot": "/",

    // Strict Checks
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules/**/*"
  ]
}